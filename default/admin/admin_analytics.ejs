							newWin.document.open();
							newWin.document.write(docHtml);
							newWin.document.close();
							
							console.log('Report generated successfully');
							
						} catch (e) {
							console.error('Error generating report:', e);
							alert('Error generating report: ' + e.message);
						}
					});
				} else {
					console.error('Generate Report button not found in DOM!');
				}

				// Build table HTML for report
				function buildSeniorsReportTableHtml(seniors) {
					function esc(s){ 
						return String(s === null || s === undefined ? '' : s)
							.replace(/&/g,'&amp;')
							.replace(/</g,'&lt;')
							.replace(/>/g,'&gt;'); 
					}
					
					const stats = {};
					const uniqueIds = new Set();
					
					// Process Senior Citizens data
					seniors.forEach(s => {
						if (s && (s._id || s.id)) uniqueIds.add(s._id || s.id);
						const age = (typeof s.age === 'number') ? s.age : (s.age ? parseInt(s.age,10) : null);
						const gender = (s.gender || 'Unknown').toString();
						const barangay = (s.barangay || 'Unknown').toString();
						
						if (!stats[barangay]) {
							stats[barangay] = { 
								count: 0, 
								male: 0, 
								female: 0, 
								otherGender: 0, 
								ages: [] 
							};
						}
						stats[barangay].count += 1;
						if (age !== null && !isNaN(age)) stats[barangay].ages.push(age);
						if (/^male$/i.test(gender)) stats[barangay].male += 1;
						else if (/^female$/i.test(gender)) stats[barangay].female += 1;
						else stats[barangay].otherGender += 1;
					});

					const keys = Object.keys(stats).sort();
					let html = \`
						<div class="table-responsive">
							<table class="table table-striped table-bordered table-hover">
								<thead class="table-dark">
									<tr>
										<th>Barangay</th>
										<th>Age Range</th>
										<th>Total</th>
										<th>Male</th>
										<th>Female</th>
										<th>Other/Unknown</th>
									</tr>
								</thead>
								<tbody>\`;
					
					keys.forEach(k => {
						if (!stats[k]) return;
						const st = stats[k];
						const minAge = st.ages.length ? Math.min(...st.ages) : 'N/A';
						const maxAge = st.ages.length ? Math.max(...st.ages) : 'N/A';
						const ageRange = st.ages.length ? \`\${minAge} - \${maxAge}\` : 'N/A';
						
						html += \`
							<tr>
								<td><strong>\${esc(k)}</strong></td>
								<td>\${esc(ageRange)}</td>
								<td><span class="badge bg-primary">\${st.count}</span></td>
								<td>\${st.male}</td>
								<td>\${st.female}</td>
								<td>\${st.otherGender}</td>
							</tr>\`;
					});
					
					html += '</tbody></table></div>';
					
					// Calculate totals
					let totalMale = 0, totalFemale = 0, totalOther = 0, totalCount = 0;
					Object.values(stats).forEach(st => { 
						totalMale += st.male; 
						totalFemale += st.female; 
						totalOther += st.otherGender;
						totalCount += st.count;
					});
					
					const allAges = [].concat(...Object.values(stats).map(st => st.ages));
